{% extends 'base.html.twig' %}

{% block title %}Вход{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/auth.css') }}">
{% endblock %}

{% block body %}
<div class="auth-container">
    <div class="auth-card">
        <h1>Вход</h1>

        {% if error %}
            <div class="error-message">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form method="post">
            <div class="form-group">
                <label for="login">Логин</label>
                <input type="text" id="login" name="_username" value="{{ last_username }}" required autofocus placeholder="Введите логин">
            </div>

            <div class="form-group">
                <label for="password">Пароль</label>
                <input type="password" id="password" name="_password" required placeholder="Введите пароль">
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit" class="btn btn-primary">Войти</button>
        </form>

        <p class="auth-link">
            Нет аккаунта? <a href="{{ path('app_register') }}">Зарегистрироваться</a>
        </p>
    </div>
</div>
{% endblock %}

